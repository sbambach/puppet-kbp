ProxyPass /<%= environment %>/<%= base_path %> <%= url %><% if add_environment %>/<%= environment %><% end %>
ProxyPassReverse /<%= environment %>/<%= base_path %> <%= url %><% if add_environment %>/<%= environment %><% end %>
<% if extra_paths -%>
<% extra_paths.each do |urlpath| -%>
ProxyPass <% if add_environment %>/<%= environment %><% end %><%= urlpath %> <%= url %><% if add_environment %>/<%= environment %><% end %>
ProxyPassReverse <% if add_environment %>/<%= environment %><% end %><%= urlpath %> <%= url %><% if add_environment %>/<%= environment %><% end %>
<% end -%>
<% end -%>
<% if regex_paths -%>
<% regex_paths.each do |urlpath| -%>
ProxyPassMatch ^(<% if add_environment %>/<%= environment %><% end %><%= urlpath %>.*)$ <%= url %>$1
ProxyPassReverse <% if add_environment %>/<%= environment %><% end %><%= urlpath %> <%= url %>
<% end -%>
<% end -%>

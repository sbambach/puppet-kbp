      password_hash => "BOGUS",
      sshkeys       => "ssh-rsa  pieter@kumina.nl\n";
    "rutger":
      fullname      => "Rutger Spiertz",
      uid           => 10003,
      password_hash => "BOGUS",
      sshkeys       => "ssh-rsa  rutger@kumina.nl\n";
    "ed":
      fullname      => "Ed Schouten",
      uid           => 10004,
      password_hash => "BOGUS",
      shell         => "zsh",
      sshkeys       => "ssh-rsa  cardno:00050000057D\n";
    "thomas":
      fullname      => "Thomas Ronner",
